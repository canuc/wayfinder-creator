# Clawdbot Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

# Connection provider (whatsapp, telegram, signal)
provider: whatsapp

# AI model configuration
ai:
  provider: anthropic
  model: claude-3-5-sonnet-20241022
  max_tokens: 4096

# Gateway settings
gateway:
  port: {{ clawdbot_port }}
  ui: true

# Logging
logging:
  level: info
  file: "{{ clawdbot_config_dir }}/logs/clawdbot.log"

# Security
security:
  rate_limit: 10
  session_timeout: 60
  auto_reconnect: true
  keepalive_interval: 30
